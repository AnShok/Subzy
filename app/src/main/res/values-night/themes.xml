<resources>

    <!-- Base application theme for Dark mode -->
    <style name="Base.Theme.Subzy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Цвет фона -->
        <item name="colorPrimary">@color/Gray_56</item>

        <!-- Текст основной -->
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>

        <!-- текст в edit text -->
        <item name="colorOnSecondary">@color/white</item>

        <!-- hint в edit text -->
        <item name="colorOnSecondaryFixed">@color/gray</item>

        <!-- кнопки -->
        <item name="colorSurface">@color/Gray_60</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- кнопки сброса и добавления в избранное -->
        <item name="colorAccent">@color/red</item>

        <!--позволяет динамически изменять фон окна приложения в соответствии с выбранной темой-->
        <item name="android:windowBackground">@color/Gray_80</item>
    </style>

    <!-- Тема приложения -->
    <style name="Theme.Subzy" parent="Base.Theme.Subzy">
        <!-- Дополнительные настройки можно добавить здесь -->
    </style>

</resources>
