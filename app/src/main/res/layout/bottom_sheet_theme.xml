<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bottom_sheet_background"
    android:paddingHorizontal="16dp">

    <!-- Линия наверху -->
    <View
        android:id="@+id/line"
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bottom_sheet_line"
        android:backgroundTint="@color/Gray_30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Заголовок -->
    <TextView
        android:id="@+id/themeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Choose theme"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <!-- Light -->
    <TextView
        android:id="@+id/optionLight"
        style="@style/TextAppearance.Headline3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:layout_marginTop="16dp"
        android:text="Light"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/themeTitle" />

    <!-- Dark -->
    <TextView
        android:id="@+id/optionDark"
        style="@style/TextAppearance.Headline3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="Dark"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/optionLight" />

    <!-- System -->
    <TextView
        android:id="@+id/optionSystem"
        style="@style/TextAppearance.Headline3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="System Default"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/optionDark" />

</androidx.constraintlayout.widget.ConstraintLayout>
