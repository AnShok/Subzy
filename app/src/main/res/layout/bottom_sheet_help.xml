<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_bottom_sheet_background"
    android:orientation="vertical"
    android:paddingHorizontal="8dp">

    <!-- Линия наверху -->
    <View
        android:id="@+id/line"
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bottom_sheet_line"
        android:backgroundTint="@color/Gray_30" />

    <LinearLayout
        android:id="@+id/emailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selectable_rounded"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_mail" />

        <TextView
            style="@style/TextAppearance.Headline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Связаться по почте"
            android:textColor="@color/white" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="8dp"
        android:background="@color/Gray_50" />

    <LinearLayout
        android:id="@+id/telegramContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:background="@drawable/bg_selectable_rounded"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_tg" />

        <TextView
            style="@style/TextAppearance.Headline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Перейти в Telegram"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
