<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Display -->
    <style name="TextAppearance.Display" parent="TextAppearance.AppCompat">
        <item name="android:textSize">72sp</item>
    </style>

    <!-- Headline 8 -->
    <style name="TextAppearance.Headline8" parent="TextAppearance.AppCompat">
        <item name="android:textSize">56sp</item>
    </style>

    <!-- Headline 7 -->
    <style name="TextAppearance.Headline7" parent="TextAppearance.AppCompat">
        <item name="android:textSize">40sp</item>
    </style>

    <!-- Headline 6 -->
    <style name="TextAppearance.Headline6" parent="TextAppearance.AppCompat">
        <item name="android:textSize">32sp</item>
    </style>

    <!-- Headline 5 -->
    <style name="TextAppearance.Headline5" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Headline 4 -->
    <style name="TextAppearance.Headline4" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Headline 3 -->
    <style name="TextAppearance.Headline3" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Headline 2 -->
    <style name="TextAppearance.Headline2" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Headline 1 -->
    <style name="TextAppearance.Headline1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Subtitle -->
    <style name="TextAppearance.Subtitle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Body Big -->
    <style name="TextAppearance.BodyBig" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
    </style>
    <!-- Body Large -->
    <style name="TextAppearance.BodyLarge" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Body Medium -->
    <style name="TextAppearance.BodyMedium" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Body Small -->
    <style name="TextAppearance.BodySmall" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CustomTabText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- На домашнем фрагменте скругление только нижних углов -->
    <style name="CustomShapeUpCard" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <!-- Новая подписка - поле для ввода названия подписки -->
    <style name="textLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/new_sub_box_stroke</item>
        <item name="android:textColorHint">@color/Gray_30</item>
    </style>

    <!-- скругление для иконки новой подписки -->
    <style name="new_sub_icon_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="new_sub_icon_background">
        <item name="android:backgroundTint">@color/Gray_30</item>
    </style>


    <!-- Кастомный стиль для DatePickerDialog -->
    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Цвет кнопки "ОК" и "Отмена" -->
        <item name="colorPrimary">@color/Accent_P_100</item>
        <!-- Цвет текста кнопок -->
    </style>

    <!-- Стиль для BottomSheetDialog-->
    <style name="BottomSheetDialogResizeStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!-- Стиль для NumberPicker в выборе периода подписки-->
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/Gray_20</item>
        <item name="colorControlNormal">@color/Accent_P_100</item>
    </style>


    <style name="RoundedDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/bg_rounded_16</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="Widget.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/Primary_20</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="BottomSheet.Transparent" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item> <!-- прозрачный фон системного контейнера -->
        <item name="backgroundTint">@android:color/transparent</item> <!-- важно для API 31+ -->
    </style>

</resources>
